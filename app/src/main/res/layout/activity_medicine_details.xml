<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_above="@id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MedicineDetailsActivity">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- header -->
            <LinearLayout
                android:id="@+id/llTop"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_weight="80"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ivBack"
                            android:src="@drawable/back"
                            android:layout_width="50dp"
                            android:layout_height="25dp" />
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Medicine Details"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_weight="10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:id="@+id/ivSearch"
                            android:src="@drawable/search"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:id="@+id/ivCart"
                            android:src="@drawable/cart"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                        <TextView
                            android:id="@+id/tvCartCnt"
                            android:padding="2dp"
                            android:textSize="10dp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:text="02"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/circle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivMedicine"
                android:layout_marginTop="10dp"
                android:src="@drawable/product"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:fontFamily="@font/poppins_semibold"
                    android:id="@+id/tvName"
                    android:textColor="@color/textColor"
                    android:textSize="16dp"
                    android:text="Pudin hara pearls 10mg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvCompany"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="12dp"
                    android:text="By USV PVT LTD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!--pricing-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvOfferPrice"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/textColor"
                        android:textSize="14dp"
                        android:text="Rs 102"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvMRP"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="14dp"
                        android:text="Rs 102"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvDiscount"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:text="100% off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:singleSelection="true"
                    android:id="@+id/chipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--                <com.google.android.material.chip.Chip-->
                    <!--                    style="@style/Widget.MaterialComponents.Chip.Choice"-->
                    <!--                    android:text="10 mg"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"/>-->
                    <!--                <com.google.android.material.chip.Chip-->
                    <!--                    style="@style/Widget.MaterialComponents.Chip.Choice"-->
                    <!--                    android:text="10 mg"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"/>-->
                    <!--                <com.google.android.material.chip.Chip-->
                    <!--                    style="@style/Widget.MaterialComponents.Chip.Choice"-->
                    <!--                    android:text="10 mg"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"/>-->
                </com.google.android.material.chip.ChipGroup>

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvTotal"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="40"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/textColor"
                        android:textSize="14dp"
                        android:text="â‚¹102"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="center"
                        android:text="Add To Cart"
                        android:padding="5dp"
                        android:layout_weight="60"
                        android:layout_gravity="right"
                        android:background="@drawable/rounded_edittext"
                        android:id="@+id/tvQty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Refill Order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.chip.ChipGroup
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:singleSelection="true"
                    android:id="@+id/chipGroupRefil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="15 Days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="15 Days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="30 Days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="60 Days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:padding="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/llBottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="7dp"
            android:background="@drawable/btn_back_theme"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/tvAddMore"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14dp"
                android:text="Add More"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/white"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:id="@+id/tvCheckout"
                android:text="Checkout"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:visibility="gone"
            android:layout_margin="5dp"
            android:background="@drawable/btn_back_theme"
            android:text="Proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>