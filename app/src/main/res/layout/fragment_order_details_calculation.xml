<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OrderDetailsCalculationFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        deliver on -->
        <LinearLayout
            android:id="@+id/llDeliveryDate"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/my_orders"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginLeft="10dp"
                    android:text="Deliver On"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvDeliveryDate"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Sun, 2nd Aug 2020"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--        order tracking-->
        <LinearLayout
            android:id="@+id/llOrderTracking"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="30"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivPlaced"
                        android:tint="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/check"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <View
                        android:layout_gravity="center"
                        android:background="@color/lightGray"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="70"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvPlaced"
                        android:fontFamily="@font/poppins_semibold"
                        android:textStyle="bold"
                        android:text="Order Placed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Monday, 5 Aug 2020"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="30"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivConfirm"
                        android:layout_gravity="center"
                        android:background="@drawable/check"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <View
                        android:layout_gravity="center"
                        android:background="@color/lightGray"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="70"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvConfirm"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/poppins_semibold"
                        android:textStyle="bold"
                        android:text="Order Confirmation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Monday, 5 Aug 2020"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="30"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivProcessing"
                        android:layout_gravity="center"
                        android:background="@drawable/check"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <View
                        android:layout_gravity="center"
                        android:background="@color/lightGray"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="70"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvProcessing"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/poppins_semibold"
                        android:textStyle="bold"
                        android:text="Order Processing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Monday, 5 Aug 2020"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="30"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivOut"
                        android:layout_gravity="center"
                        android:background="@drawable/check"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <View
                        android:layout_gravity="center"
                        android:background="@color/lightGray"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="70"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvOut"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/poppins_semibold"
                        android:textStyle="bold"
                        android:text="Out for Delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Monday, 5 Aug 2020"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="30"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivDeliver"
                        android:layout_gravity="center"
                        android:background="@drawable/check"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <View
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:background="@color/lightGray"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="70"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvDeliver"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/poppins_semibold"
                        android:textStyle="bold"
                        android:text="Estimated Arrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Monday, 5 Aug 2020"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--        cancel, return order-->
        <LinearLayout
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/llCancelOrReturn"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="5dp"
                android:background="@drawable/btn_back_theme"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvCancel"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingRight="20dp"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/white"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvReturn"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingRight="20dp"
                        android:gravity="center"
                        android:text="Return"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:visibility="gone"
                android:layout_margin="5dp"
                android:background="@drawable/btn_back_theme"
                android:text="Proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!--        user address-->
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:layout_weight="90"
                        android:id="@+id/tvAddAddress"
                        android:textSize="16dp"
                        android:text="Delivery Address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/ivAddAddress"
                        android:layout_gravity="right"
                        android:layout_weight="10"
                        android:src="@drawable/edit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvAddress"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="118-Mahalakshmi Complex, Sadaship Peth, Pune."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--        coupon code-->
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llOrderMedicine"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <EditText
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="Enter coupon code"
                        android:layout_weight="70"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:text="Apply"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--        calculations-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/poppins_medium"
                    android:text="Order total"
                    android:layout_weight="60"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvTotal"
                    android:gravity="right"
                    android:text="₹1200"
                    android:layout_weight="40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/poppins_medium"
                    android:text="Dawabag discount"
                    android:layout_weight="60"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvDiscount"
                    android:gravity="right"
                    android:text="-₹200"
                    android:layout_weight="40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/poppins_medium"
                    android:text="Coupon discount"
                    android:layout_weight="60"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvCouponDiscount"
                    android:gravity="right"
                    android:text=""
                    android:layout_weight="40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/poppins_medium"
                    android:text="Shipping"
                    android:layout_weight="60"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvShipping"
                    android:gravity="right"
                    android:text="₹100"
                    android:layout_weight="40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/poppins_medium"
                    android:text="To be paid"
                    android:layout_weight="60"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvPayable"
                    android:gravity="right"
                    android:text="₹1100"
                    android:layout_weight="40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>